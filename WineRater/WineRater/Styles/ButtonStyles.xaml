<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <Style x:Key="SimpleButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundNormal}" />
    <Setter Property="BorderColor" Value="{StaticResource ButtonNormal}" />
    <Setter Property="BorderRadius" Value="5" />
    <Setter Property="BorderWidth" Value="2" />
    <Setter Property="Margin" Value="2" />
  </Style>

  <Style x:Key="MainPanelButton" TargetType="Button">
    <Setter Property="BorderColor" Value="{StaticResource MainPageButtonBackgroundNormal}"/>
    <Setter Property="BorderWidth" Value="2"/>
    <Setter Property="BackgroundColor" Value="{StaticResource MainPageButtonBackgroundNormal}"/>
    <Setter Property="TextColor" Value="{StaticResource ButtonTextNormal}"/>
    <Setter Property="CornerRadius" Value="35"/>
  </Style>
  
</ResourceDictionary>